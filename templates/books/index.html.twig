{% extends 'base.html.twig' %}

{% block title %}BOOKS HOME{% endblock %}

{% block body %}
    <div class="container">
        <div class="container">

            <div class="text-center">

                <h1 class="p-1">Books Manager !</h1>

            </div>

        </div>

        <br>
        {% if books|length == 0 %}
            <div class="text-center">
                <p>Pas de livres référencés !</p>
            </div>
        {% else %}
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.id }}</td>
                        <td>{{ book.title }}</td>
                        <td>{{ book.author }}</td>
                        <td>{{ book.status ? "Libre" : "Pris" }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
